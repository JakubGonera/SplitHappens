<AnchorPane prefHeight="200" prefWidth="300.0" styleClass="background-color-1" stylesheets="@Style/panes.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
  <children>
    <VBox alignment="CENTER" layoutX="44.0" layoutY="14.0" prefHeight="102.0" prefWidth="212.0" styleClass="background-color-2" stylesheets="@Style/panes.css">
      <Label fx:id="textLabel" alignment="TOP_CENTER" prefHeight="20" prefWidth="170" stylesheets="@Style/interactables.css" text="Confirm the transaction?" />
      <Label fx:id="detailLabel" alignment="TOP_CENTER" prefHeight="20" prefWidth="170" stylesheets="@Style/interactables.css" text="Confirm the transaction?">
            <VBox.margin>
               <Insets top="5.0" />
            </VBox.margin></Label>
      <HBox alignment="TOP_CENTER">
        <Label fx:id="amountLabel" prefHeight="20" prefWidth="70" stylesheets="@Style/interactables.css" text="Amount: " />
        <TextField fx:id="amountField" prefHeight="25.0" prefWidth="90.0" stylesheets="@Style/interactables.css" />
            <VBox.margin>
               <Insets top="5.0" />
            </VBox.margin>
      </HBox>
    </VBox>
    <Button fx:id="CancelButton" layoutX="80.0" layoutY="150.0" mnemonicParsing="false" onAction="#onCancelButton" stylesheets="@Style/interactables.css" text="Cancel" />
    <Button fx:id="ConfirmButton" defaultButton="true" layoutX="160.0" layoutY="150.0" mnemonicParsing="false" onAction="#onConfirmButton" stylesheets="@Style/interactables.css" text="Confirm" viewOrder="100" />
  </children>
